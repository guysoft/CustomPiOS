## Source error handling, leave this in place
set -xe

# Source CustomPIOS common.sh
source /common.sh
install_cleanup_trap

### noninteractive Check
if [ -z "${DEBIAN_FRONTEND}" ]; then
    export DEBIAN_FRONTEND=noninteractive
fi

## Force Update
apt update

### Pre Update Section
if [ "${PREINSTALL_DISTUPGRADE}" = "y" ]; then
  echo_green "Performing 'apt ${PREINSTALL_DISTUPGRADE_METHOD}' ... "
  apt "${PREINSTALL_DISTUPGRADE_METHOD}" -y
else
  echo_green "Skipping Dist Upgrade ['apt ${PREINSTALL_DISTUPGRADE_METHOD}']."
fi

### Pre Installer Section
# Make sure Cache is fresh
apt_update_skip
if [ "${PREINSTALL_USE_PREINSTALLER}" = "y" ]; then
  apt install --yes --no-install-recommends "${PREUPDATER_PRE_INSTALL_PKGS}"
else
  echo_red "PreInstall Mechanism not configured. [SKIPPED]"
fi
